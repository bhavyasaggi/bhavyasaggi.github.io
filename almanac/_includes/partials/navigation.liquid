{%- if nav_items and nav_items.size > 0 -%}
  <ol class="ps-4 list-reset">
    {%- for nav_item in nav_items -%}
      {%- if nav_item.url == page_url -%}
        {%- assign nav_item_active_bg = 'bg-light' -%}
      {%- else -%}
        {%- assign nav_item_active_bg = 'bg-white' -%}
      {%- endif -%}
      <li>
        {%- assign nav_children = nav_item['children'] -%}
        {%- if nav_children and nav_children.size > 0 -%}
          <details open class="bg-white border px-4 py-2 rounded">
            <summary class="px-2 py-1 rounded {{- nav_item_active_bg -}} hover">
              <a href="{{- nav_item.url -}}" class="link-dark">
                {{- nav_item.title -}}
              </a>
            </summary>
            {%- render 'partials/navigation.liquid', nav_items: nav_children, page_url: page_url -%}
          </details>
        {%- else -%}
          <div class="px-2 py-1 rounded {{- nav_item_active_bg -}} hover">
            <a href="{{- nav_item.url -}}" class="d-block link-dark">
              {{- nav_item.title -}}
            </a>
          </div>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ol>
{%- endif -%}
